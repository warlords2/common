{
  "version": "2.4.2",
  "compilerOptions": {
      "lib": ["es5", "es6"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",

      "baseUrl":".",
      "paths": {
        "@core": ["src/core/index.ts"],
        "@business":["src/business/index.ts"]
      },

      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
	    "resolveJsonModule": true,
	    "allowSyntheticDefaultImports": true,
      "declaration": true,
      "sourceMap": true
      
  },
  "exclude": [
      "node_modules"
  ]
}